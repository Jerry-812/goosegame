.page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: radial-gradient(circle at 20% 0%, #ffeaf4, #ffd2e7 40%, #ffc1df 100%);
}

.header {
  padding: 18rpx 18rpx 12rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.pill {
  padding: 10rpx 14rpx;
  border-radius: 18rpx;
  background: rgba(255, 119, 183, 0.36);
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  backdrop-filter: blur(10rpx);
  display: flex;
  gap: 10rpx;
  align-items: baseline;
}

.pill-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.pill-value {
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.pill.danger {
  background: rgba(255, 71, 115, 0.45);
  animation: pulse 1s infinite;
}

.btn {
  margin-left: auto;
  background: rgba(255, 255, 255, 0.22);
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  color: #fff;
  border-radius: 999rpx;
}

.btn.primary {
  background: #ff4b9a;
  border-color: rgba(255, 255, 255, 0.65);
}

.game-area {
  position: relative;
  flex: 1;
  margin: 0 16rpx;
  border-radius: 28rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.05));
}

.pot-bg {
  position: absolute;
  left: 0;
  bottom: -10rpx;
  width: 100%;
  z-index: 0;
  opacity: 0.95;
}

.merge-fx {
  position: absolute;
  inset: 0;
  z-index: 99999;
  pointer-events: none;
  background: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.65), rgba(255, 255, 255, 0) 60%),
    radial-gradient(circle at 20% 30%, rgba(255, 246, 204, 0.7), rgba(255, 246, 204, 0) 55%),
    radial-gradient(circle at 70% 40%, rgba(255, 214, 240, 0.8), rgba(255, 214, 240, 0) 55%);
  animation: flash 420ms ease-out forwards;
}

.tray {
  padding: 16rpx 16rpx 22rpx;
  background: rgba(255, 255, 255, 0.18);
  border-top: 2rpx solid rgba(255, 255, 255, 0.35);
}

.tray-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 700;
}

.tray-sub {
  font-weight: 600;
  opacity: 0.9;
  font-size: 24rpx;
}

.tray-slots {
  margin-top: 12rpx;
  display: flex;
  gap: 10rpx;
  justify-content: center;
}

.tray-slot {
  width: 92rpx;
  height: 92rpx;
  border-radius: 18rpx;
  background: rgba(255, 119, 183, 0.18);
  border: 2rpx dashed rgba(255, 255, 255, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
}

.tray-slot.filled {
  border-style: solid;
  background: rgba(255, 255, 255, 0.12);
}

.tray-item {
  width: 78rpx;
  height: 78rpx;
  border-radius: 14rpx;
}

.overlay {
  position: fixed;
  inset: 0;
  z-index: 100000;
  background: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog {
  width: 640rpx;
  border-radius: 28rpx;
  padding: 24rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.88));
  color: #ff3f8c;
  border: 2rpx solid rgba(255, 255, 255, 0.85);
}

.dialog-title {
  font-size: 40rpx;
  font-weight: 900;
}

.dialog-sub {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: rgba(255, 63, 140, 0.85);
}

.dialog-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

@keyframes flash {
  0% {
    opacity: 0;
    transform: scale(0.96);
  }
  40% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(1.02);
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.03);
  }
  100% {
    transform: scale(1);
  }
}

