.doll {
  position: absolute;
  transform-origin: 50% 60%;
}

.doll-image {
  display: block;
  border-radius: 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.18);
}

.doll-badge {
  position: absolute;
  left: 50%;
  top: 6rpx;
  transform: translateX(-50%);
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  color: #fff;
  background: rgba(255, 119, 183, 0.78);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  white-space: nowrap;
}

.is-blocked {
  opacity: 0.35;
}

.is-visible {
  opacity: 1;
}

